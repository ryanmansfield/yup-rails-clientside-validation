<%= form_with(model: todo,
  data: {
    controller: "form",
    action: "turbo:submit-start->form#submit"
  }
) do |form| %>
  <% if todo.errors.any? %>
    <div style="color: red">
      <h2><%= pluralize(todo.errors.count, "error") %> prohibited this todo from being saved:</h2>

      <ul>
        <% todo.errors.each do |error| %>
          <li><%= error.full_message %></li>
        <% end %>
      </ul>
    </div>
  <% end %>

  <div>
    <%= form.label :name, style: "display: block" %>
    <%= form.text_field :name, data: { form_target: :name } %>
  </div>

  <div>
    <%= form.label :description, style: "display: block" %>
    <%= form.text_field :description, data: { form_target: :description } %>
  </div>

  <div>
    <%= form.label :due_date, style: "display: block" %>
    <%= form.date_field :due_date, data: { form_target: :dueDate } %>
  </div>

  <div>
    <%= form.label :review_required, style: "display: block" %>
    <%= form.check_box :review_required, data: { form_target: :reviewRequired } %>
  </div>

  <div>
    <%= form.label :priority, style: "display: block" %>
    <%= form.number_field :priority, data: { form_target: :priority } %>
  </div>

  <div>
    <%= form.submit %>
  </div>
<% end %>
